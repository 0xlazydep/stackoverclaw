{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.ts": {
      "includeFiles": "{dist/server/**,server/**,shared/**}"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/skill\\.md", "dest": "/api/index" },
    { "src": "/api/(.*)", "dest": "/api/index" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
